<launch>
  <!-- Set the file describing which sensor(s) to use to build the octomap  -->
  <arg name="moveit_octomap_sensor_params_file" default="$(find hsrb_custom_moveit_config)/config/sensors_3d.yaml" />

  <!-- Params are specific to this plugin -->

  <arg name="head_pointing_frame" default="/hsrb/head_depth_camera_pointcloud_frame" />
  <param name="head_pointing_frame" value="$(arg head_pointing_frame)" />

  <!-- Params for the octomap monitor -->
  
  <param name="octomap_frame" type="string" value="map" />
  <param name="octomap_resolution" type="double" value="0.015" />
  <param name="max_range" type="double" value="2" />

  <!-- max/min height for occupancy map, should be in meters -->
  <param name="filter_ground" type="bool" value="true" />
  <param name="filter_speckles" value="true" />
  <param name="ground_filter/distance" value="0.1" />
  <param name="ground_filter/angle" value="0.26" />
  <param name="ground_filter/plane_distance" value="0.1" />
  <param name="pointcloud_min_z" value="-2.0" />
  <param name="pointcloud_max_z" value="4.0" />
  <param name="occupancy_min_z" value="0.0" />
  <param name="occupancy_max_z" value="1.7" />
  
  <!-- sensors used to update the map -->
  <rosparam command="load" file="$(arg moveit_octomap_sensor_params_file)" />

</launch>
